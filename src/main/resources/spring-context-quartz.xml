<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <bean id="operationLogCleanDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.ctrip.zeus.service.operationLog.OperationLogCleanJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="operationLogDao" value-ref="operationLogDao" />
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <!-- Run the job every 1h = 60*60*1000=3600000 ms with initial delay of 1 second -->
    <bean id="operationLogCleanTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="operationLogCleanDetail"/>
        <property name="startDelay" value="1000"/>
        <property name="repeatInterval" value="3600000"/>
    </bean>
    <bean id="taskCleanDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.ctrip.zeus.service.task.TaskCleanJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="taskDao" value-ref="taskDao" />
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <!-- Run the job every 1h = 60*60*1000=3600000 ms with initial delay of 1 second -->
    <bean id="taskCleanTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="taskCleanDetail"/>
        <property name="startDelay" value="1000"/>
        <property name="repeatInterval" value="3600000"/>
    </bean>


    <bean id="taskWorkerDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.ctrip.zeus.executor.TaskExecutorJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="taskWorker" value-ref="taskWorker" />
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <!-- Run the job every 1h = 60*60*1000=3600000 ms with initial delay of 1 second -->
    <bean id="taskWorkerTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="taskWorkerDetail"/>
        <property name="startDelay" value="1000"/>
        <property name="repeatInterval" value="1000"/>
    </bean>

    <bean id="cleanManagerDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.ctrip.zeus.clean.CleanDbJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="cleanDbManager" value-ref="cleanDbManager" />
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <!-- Run the job every 1h = 60*60*1000=3600000 ms with initial delay of 1 second -->
    <bean id="cleanManagerTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="cleanManagerDetail"/>
        <property name="startDelay" value="1000"/>
        <property name="repeatInterval" value="3600000"/>
    </bean>

    <bean id="healthCheckFetchDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.ctrip.zeus.service.status.HealthCheckFetchJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="healthCheckStatusService" value-ref="healthCheckStatusService" />
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <!-- Run the job every 1s  with initial delay of 5 second -->
    <bean id="healthCheckFetchTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="healthCheckFetchDetail"/>
        <property name="startDelay" value="1000"/>
        <property name="repeatInterval" value="5000"/>
    </bean>

    <!-- Scheduler factory bean to glue together jobDetails and triggers to Configure Quartz Scheduler -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="waitForJobsToCompleteOnShutdown" value="true"/>
        <property name="jobDetails">
            <list>
                <ref bean="taskWorkerDetail"/>
                <ref bean="cleanManagerDetail"/>
                <ref bean="healthCheckFetchDetail"/>
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="taskWorkerTrigger"/>
                <ref bean="cleanManagerTrigger"/>
                <ref bean="healthCheckFetchTrigger"/>
            </list>
        </property>
    </bean>
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<entities do-package="com.ctrip.zeus.dal.core" gen="true" do-class-suffix="Do">
    <entity name="tag" table="tag" alias="t" do-class="TagDo">
        <query-defs>
            <query name="find-all" type="SELECT" multiple="true">
                <statement>
                    <![CDATA[
                    SELECT <FIELDS/>
                    FROM <TABLE/>
                    ]]>
                </statement>
            </query>
            <query name="find-by-name-and-type" type="SELECT">
                <param name="name"/>
                <param name="type"/>
                <statement>
                    <![CDATA[
                    SELECT <FIELDS/>
                    FROM <TABLE/>
                    WHERE <FIELD name='name'/> = ${name}
                      AND <FIELD name='type'/> = ${type}
                    ]]>
                </statement>
            </query>
            <query name="find-by-id" type="SELECT">
                <param name="id"/>
                <statement>
                    <![CDATA[
                    SELECT <FIELDS/>
                    FROM <TABLE/>
                    WHERE <FIELD name='id'/> = ${id}
                    ]]>
                </statement>
            </query>
            <query name="insert" type="INSERT">
                <statement>
                    <![CDATA[
                    INSERT INTO <TABLE/>(<FIELDS/>)
                    VALUES(<VALUES/>)
                    ON DUPLICATE KEY UPDATE
                        value = values(value)
                    ]]>
                </statement>
            </query>
            <query name="delete" type="DELETE">
                <param name="id"/>
                <statement>
                    <![CDATA[
                    DELETE FROM <TABLE/>
                    WHERE <FIELD name='id'/> = ${id}
                    ]]>
                </statement>
            </query>
        </query-defs>
    </entity>
    <entity name="tag-item" table="tag_item" alias="ti" do-class="TagItemDo">
        <var name="tag-ids" value-type="Long[]"/>
        <query-defs>
            <query name="find-by-tag" type="SELECT" multiple="true">
                <param name="tag-id"/>
                <statement>
                    <![CDATA[
                    SELECT <FIELDS/>
                    FROM <TABLE/>
                    WHERE <FIELD name='tag-id'/> = ${tag-id}
                    ]]>
                </statement>
            </query>
            <query name="find-by-tags" type="SELECT" multiple="true">
                <param name="tag-ids"/>
                <statement>
                    <![CDATA[
                    SELECT <FIELDS/>
                    FROM <TABLE/>
                    WHERE <FIELD name='tag-id'/> in <IN> ${tag-ids} </IN>
                    ]]>
                </statement>
            </query>
            <query name="insert" type="INSERT">
                <statement>
                    <![CDATA[
                    INSERT INTO <TABLE/>(<FIELDS/>)
                    VALUES(<VALUES/>)
                    ]]>
                </statement>
            </query>
            <query name="delete-by-tag-and-item" type="DELETE">
                <param name="tag-id"/>
                <param name="item-id"/>
                <statement>
                    <![CDATA[
                    DELETE FROM <TABLE/>
                    WHERE <FIELD name='tag-id'/> = ${tag-id}
                      AND <FIELD name='item-id'/> = ${item-id}
                    ]]>
                </statement>
            </query>
        </query-defs>
    </entity>
</entities>
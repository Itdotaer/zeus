<model>
    <slb name="default">
        <nginx-bin>/usr/local/nginx/bin</nginx-bin>
        <nginx-conf>/usr/local/nginx/conf</nginx-conf>
        <nginx-worker-processes>1</nginx-worker-processes>
        <vips>
            <vip ip="192.168.1.1"/>
            <vip ip="192.168.1.2"/>
        </vips>
        <slb-servers>
            <slb-server ip="192.168.1.1" host-name="slb001" enable="true"/>
            <slb-server ip="192.168.1.2" host-name="slb002" enable="true"/>
        </slb-servers>
        <virtual-servers>
            <virtual-server name="vs001" ssl="true">
                <port>80,8099</port>
                <domains>
                    <domain name="www.ctrip.com"/>
                    <domain name="hotel.ctrip.com"/>
                </domains>
            </virtual-server>
            <virtual-server name="vs001" ssl="true">
                <port>80</port>
                <domains>
                    <domain name="www.ctrip.com"/>
                    <domain name="hotel.ctrip.com"/>
                </domains>
            </virtual-server>
        </virtual-servers>
        <status>healthy</status>
    </slb>

    <app name="gateway" app-id="app921822">
        <app-slbs>
            <app-slb>
                <slb-name>default</slb-name>
                <path>/hotel</path>
                <virtual-server/>
            </app-slb>
            <app-slb>
                <slb-name>default</slb-name>
                <path>/hotel</path>
                <virtual-server/>
            </app-slb>
        </app-slbs>
        <health-check intervals="10" fails="2" passes="2">
            <uri>/health-check</uri>
        </health-check>
        <load-balancing-method type="round-robin|least-conn|ip-hash|hash">
            <value>uri</value>
        </load-balancing-method>
        <app-servers>
            <app-server port="80" weight="5" max-fails="5" fail-timeout="30" healthy="true" enable="true">
                <server ip="192.168.1.10" host-name="vms002" up="true"/>
            </app-server>
            <app-server port="80" weight="5" max-fails="5" fail-timeout="30" healthy="true" enable="true">
                <server ip="192.168.1.11" host-name="vms002" up="true"/>
            </app-server>
        </app-servers>
    </app>
</model>